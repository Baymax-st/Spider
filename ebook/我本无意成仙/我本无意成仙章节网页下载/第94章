        var doc = $(".content_detail");
        for (var i = 0;  i < doc.length; i++) {
            var pdoc = $(doc[i]);
            var oldstr = pdoc.text();
            var newstr = pdoc.text();
            for (var j = 0; j < ruleList.length; j++) {
                var rule = new RegExp(ruleList[j],"gi");
                if ( rule.test( newstr ) ) {
                    newstr = newstr.replace( rule , "" );
                }
            }
            if ( oldstr != newstr ) {
                pdoc.text(newstr);
            }
        }
    });
