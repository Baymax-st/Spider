            addBookMarkByJs(18271799, 33953, '第116章 桃花山女鬼青楼');
        setCookie("visitedId", 33953, 365);
        
            window.prevpage = "/book/33953/18269958.html";
        
        
            window.nextpage = "/book/33953/18274860.html";
        
        window.index_page = "/book/33953/";
        
        
        var doc = $(".content_detail");
        for (var i = 0;  i < doc.length; i++) {
            var pdoc = $(doc[i]);
            var oldstr = pdoc.text();
            var newstr = pdoc.text();
            for (var j = 0; j < ruleList.length; j++) {
                var rule = new RegExp(ruleList[j],"gi");
                if ( rule.test( newstr ) ) {
                    newstr = newstr.replace( rule , "" );
                }
            }
            if ( oldstr != newstr ) {
                pdoc.text(newstr);
            }
        }
    });
</script>
