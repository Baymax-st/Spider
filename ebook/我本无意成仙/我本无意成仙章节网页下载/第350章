        if (typeof addBookMarkByJs != 'undefined' && addBookMarkByJs instanceof Function)
            addBookMarkByJs(19630529, 33953, '第348章 狐狸会玩');
        setCookie("visitedId", 33953, 365);
        
            window.prevpage = "/book/33953/19627015.html";
        
        
            window.nextpage = "/book/33953/19632923.html";
        
        window.index_page = "/book/33953/";
        
        
        var doc = $(".content_detail");
        for (var i = 0;  i < doc.length; i++) {
            var pdoc = $(doc[i]);
            var oldstr = pdoc.text();
            var newstr = pdoc.text();
            for (var j = 0; j < ruleList.length; j++) {
                var rule = new RegExp(ruleList[j],"gi");
                if ( rule.test( newstr ) ) {
                    newstr = newstr.replace( rule , "" );
                }
            }
            if ( oldstr != newstr ) {
                pdoc.text(newstr);
            }
        }
    });
</script>
